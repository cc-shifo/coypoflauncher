<resources>

    <style name="Theme.iOS.WindowTitlebarBackground" parent="@style/Theme.iOS">
        <item name="android:background">@drawable/titlebar_background</item>
    </style>

    <style name="Theme.iOS.WindowTitle" parent="@style/Theme.iOS">
        <item name="android:visibility">gone</item>
    </style>

    <style name="PreferenceCategoryTitleTextAppearance">
        <item name="android:textSize">18.0dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff4c566c</item>
    </style>

    <style name="Theme.iOS.Dialog" parent="@style/Theme.iOS">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/Theme.iOS.Dialog.Animations</item>
    </style>

    <style name="Theme.iOS.Dialog.Animations" parent="@style/Theme.iOS.Dialog">
      <!--  <item name="android:windowEnterAnimation">@anim/dialog_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_out</item> --> 
    </style>

    <style name="Theme.iOS.TextAppearance" parent="@style/Theme.iOS">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="Theme.iOS.TextView" parent="@style/Theme.iOS">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="Theme.iOS.TextViewBold" parent="@style/Theme.iOS">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.iOS.DialogButton" parent="@style/Theme.iOS">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
     <!--   <item name="android:background">@drawable/ui_popup_alert_sheet_button</item> --> 
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="Theme.iOS.DialogDefaultButton" parent="@style/Theme.iOS">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
     <!--    <item name="android:background">@drawable/ui_popup_alert_sheet_button_default</item>--> 
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="iOS_NavigationBackButton">
        <item name="android:textSize">13.0dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
     <!--   <item name="android:background">@drawable/navigation_back_selector</item> --> 
        <item name="android:paddingLeft">11.0dip</item>
        <item name="android:paddingTop">0.0dip</item>
        <item name="android:paddingRight">8.0dip</item>
        <item name="android:paddingBottom">0.0dip</item>
        <item name="android:maxWidth">100.0dip</item>
        <item name="android:minWidth">48.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:shadowColor">#81000000</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:contentDescription">@null</item>
    </style>

    <style name="Theme.iOS" parent="@android:style/Theme">
        <item name="android:windowBackground">@drawable/default_background_repeat</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleSize">44.0dip</item>
        <item name="android:windowTitleStyle">@style/Theme.iOS.WindowTitle</item>
        <item name="android:windowTitleBackgroundStyle">@style/Theme.iOS.WindowTitlebarBackground</item>
    </style>

    <style name="Theme" parent="@android:style/Theme">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>